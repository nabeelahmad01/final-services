{
  "expo": {
    "name": "Service Marketplace",
    "slug": "service-marketplace-app",
    "version": "1.0.0",
    "orientation": "portrait",
    "icon": "./assets/icon.png",
    "userInterfaceStyle": "light",
    "scheme": "servicemarketplace",
    "newArchEnabled": true,
    "splash": {
      "image": "./assets/splash-icon.png",
      "resizeMode": "contain",
      "backgroundColor": "#00ACC1"
    },
    "ios": {
      "supportsTablet": true,
      "bundleIdentifier": "com.servicemarketplace.app",
      "infoPlist": {
        "NSLocationWhenInUseUsageDescription": "We need your location to connect you with nearby mechanics",
        "NSLocationAlwaysAndWhenInUseUsageDescription": "We need your location for live tracking during active services",
        "NSCameraUsageDescription": "We need camera access to upload service photos",
        "NSMicrophoneUsageDescription": "We need microphone access for voice calls",
        "NSPhotoLibraryUsageDescription": "We need photo library access to upload images"
      },
      "config": {
        "googleMapsApiKey": "YOUR_GOOGLE_MAPS_API_KEY_HERE"
      }
    },
    "android": {
      "package": "com.servicemarketplace.app",
      "adaptiveIcon": {
        "foregroundImage": "./assets/adaptive-icon.png",
        "backgroundColor": "#00ACC1"
      },
      "edgeToEdgeEnabled": true,
      "predictiveBackGestureEnabled": false,
      "permissions": [
        "ACCESS_FINE_LOCATION",
        "ACCESS_COARSE_LOCATION",
        "ACCESS_BACKGROUND_LOCATION",
        "CAMERA",
        "RECORD_AUDIO",
        "READ_EXTERNAL_STORAGE",
        "WRITE_EXTERNAL_STORAGE"
      ],
      "config": {
        "googleMaps": {
          "apiKey": "YOUR_GOOGLE_MAPS_API_KEY_HERE"
        }
      }
    },
    "web": {
      "favicon": "./assets/favicon.png"
    },
    "plugins": [
      "expo-router",
      [
        "expo-location",
        {
          "locationAlwaysAndWhenInUsePermission": "Allow Service Marketplace to use your location for live tracking."
        }
      ],
      [
        "expo-camera",
        {
          "cameraPermission": "Allow Service Marketplace to access your camera."
        }
      ],
      [
        "expo-notifications",
        {
          "icon": "./assets/notification-icon.png",
          "color": "#00ACC1"
        }
      ]
    ],
    "extra": {
      "eas": {
        "projectId": "your-eas-project-id-here"
      }
    }
  }
}